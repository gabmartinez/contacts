extend layout
block content
    .row.justify-content-center.mt-5
        .col-4.border.rounded.p-3.bg-white
            h2.text-center.pb-3.border-bottom #{section}
            form.pt-3(method='POST', action="/auth/login")
                .form-group
                    label(for="EmailInput") Email address
                    input#EmailInput.form-control(type="email", name="email", placeholder="Enter email")
                .form-group
                    label(for="PasswordInput") Password
                    input#PasswordInput.form-control(type="password", name="password", placeholder="Password")
                if message
                    small.form-text.text-danger #{message}
                button.btn.btn-block.btn-primary(type="submit") Login